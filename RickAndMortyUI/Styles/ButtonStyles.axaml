<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="Gray">
			<Button Content="Click me!">
				<TextBlock>Создать (Продвинутый режим)</TextBlock>
			</Button>
        </Border>
    </Design.PreviewWith>

	<Style Selector="Button">
		<Setter Property="Background" Value="#16f0f0f0"></Setter>
		<Setter Property="Foreground" Value="#f0f0f0"></Setter>
		<Setter Property="FontSize" Value="20"></Setter>
		<Setter Property="CornerRadius" Value="0"></Setter>
		<Setter Property="Padding" Value="15 10"></Setter>
	</Style>
	<Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#0df0f0f0"></Setter>
	</Style>
	<Style Selector="Button:pointerover > TextBlock">
		<Setter Property="Foreground" Value="White"></Setter>
	</Style>
</Styles>
