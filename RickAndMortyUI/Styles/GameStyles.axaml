<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="100">
			<Border Classes="slow">
				<Image Classes="" Source="/Assets/test.jpg" Width="150"></Image>
			</Border>
        </Border>
    </Design.PreviewWith>

	<Style Selector="Border.slow">
		<Setter Property="Transitions">
			<Transitions>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:1"></TransformOperationsTransition>
			</Transitions>
		</Setter>
	</Style>
	<Style Selector="Border">
		<Setter Property="Transitions">
			<Transitions>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"></TransformOperationsTransition>
			</Transitions>
		</Setter>
	</Style>
	<Style Selector="Image.slow">
		<Setter Property="Transitions">
			<Transitions>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:1"></TransformOperationsTransition>
			</Transitions>
		</Setter>
	</Style>
	<Style Selector="Image">
		<Setter Property="Transitions">
			<Transitions>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"></TransformOperationsTransition>
			</Transitions>
		</Setter>
	</Style>
</Styles>
