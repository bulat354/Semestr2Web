			<Border Margin="200 20">
				<StackPanel>
					<TextBox></TextBox>
					<TextBox></TextBox>
					<TextBox></TextBox>
				</StackPanel>
			</Border>
			<DockPanel>
				<Border>
					<Button></Button>
				</Border>
				<Border>
					<Button></Button>
				</Border>
			</DockPanel>
		</StackPanel>
	</Border>

</Window>
