<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RickAndMortyUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1536" d:DesignHeight="864"
		
        x:Class="RickAndMortyUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="RickAndMortyUI"
		WindowState="Maximized"
		>
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	<Window.Styles>
		<StyleInclude Source="/Styles/TextBoxStyles.axaml"></StyleInclude>
		<StyleInclude Source="/Styles/ButtonStyles.axaml"></StyleInclude>
		<StyleInclude Source="/Styles/TextStyles.axaml"></StyleInclude>
	</Window.Styles>
	<Window.Background>
		<ImageBrush Source="/Assets/background.png" Stretch="UniformToFill"></ImageBrush>
	</Window.Background>

</Window>
